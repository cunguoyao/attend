<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/head_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/relativelayout1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff" >

            <Button
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="0dp"
                android:visibility="gone"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_centerInParent="true"
                android:layout_marginRight="40dp"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/today_f"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:layout_centerInParent="true"
                        android:text="今天"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/tab_t"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                      
                        android:layout_alignParentBottom="true"
                      android:layout_alignRight="@+id/title"
                       android:layout_alignLeft="@+id/title"
                       android:layout_marginBottom="1dp"
                        android:background="#429321" />
                </RelativeLayout>

                <RelativeLayout
                        android:id="@+id/week_f"                 
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                    android:id="@+id/week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="本周"
                         android:layout_centerInParent="true"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <ImageView
                         android:id="@+id/tab_w"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"                     
                        android:layout_alignParentBottom="true"
                      android:layout_alignRight="@+id/week"
                       android:layout_alignLeft="@+id/week"
                       android:layout_marginBottom="1dp"
                        />
                </RelativeLayout>

                <RelativeLayout
                     android:id="@+id/month_f"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="本月"
                         android:layout_centerInParent="true"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <ImageView
                         android:id="@+id/tab_m"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                      android:layout_alignParentBottom="true"
                        android:layout_alignRight="@+id/month"
                       android:layout_alignLeft="@+id/month"
                        android:layout_marginBottom="1dp"
                        />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

         
